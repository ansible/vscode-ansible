{
  "$schema": "https://json.schemastore.org/eslintrc",
  "env": {
    "commonjs": true,
    "es2017": true,
    "node": true
  },
  "extends": ["plugin:@typescript-eslint/recommended", "prettier"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "eqeqeq": ["error", "smart"],
    "prefer-template": "warn",
    "quotes": ["warn", "single"]
  }
}
