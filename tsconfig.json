    "outDir": "out/client",
    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "src/features/lightspeed/vue/src",
    "packages/ansible-mcp-server/test",
    "test/unit/webviews"
