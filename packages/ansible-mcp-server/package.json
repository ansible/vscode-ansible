{
  "bin": "out/server/src/cli.js",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "zod": "^4.0.0"
  },
  "description": "Ansible Development Tools MCP server with linting, workspace access, and expert prompts",
  "devDependencies": {
    "@types/node": "^24.0.15",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.31.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0"
  },
  "files": [
    "./out/server/src/**/*"
  ],
  "keywords": [
    "mcp",
    "ansible",
    "adt",
    "development-tools",
    "ansible-lint",
    "cli",
    "stdio",
    "cursor",
    "ai-assistant"
  ],
  "license": "MIT",
  "main": "./out/server/src/server.js",
  "name": "@ansible/ansible-mcp-server",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf out/server && rimraf lib",
    "compile": "tsc -p .",
    "dev:stdio": "tsx src/cli.ts --stdio",
    "lint": "eslint .",
    "prepack": "npm run compile",
    "test": "vitest run",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run test/server.ts test/integration.ts",
    "test:performance": "vitest run test/performance.ts",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run test/handlers.ts",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "./out/server/src/server.d.ts",
  "version": "0.1.0"
}
