{
  "bin": "out/server/src/cli.js",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3",
    "zod": "3.25.76"
  },
  "description": "Ansible Development Tools MCP server with linting, workspace access, and expert prompts",
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.4"
  },
  "engines": {
    "node": ">=20.0"
  },
  "files": [
    "./out/server/src/**/*"
  ],
  "keywords": [
    "mcp",
    "ansible",
    "adt",
    "development-tools",
    "ansible-lint",
    "cli",
    "stdio",
    "cursor",
    "ai-assistant"
  ],
  "license": "MIT",
  "main": "./out/server/src/server.js",
  "name": "@ansible/ansible-mcp-server",
  "overrides": {
    "zod": "3.25.76"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf out/server && rimraf lib",
    "compile": "tsc -p .",
    "dev:stdio": "tsx src/cli.ts --stdio",
    "prepack": "npm run compile",
    "test": "vitest run",
    "test:ade": "vitest run test/adeTools.ts test/adeIntegration.ts",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run test/server.ts test/integration.ts test/adeIntegration.ts",
    "test:performance": "vitest run test/performance.ts",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run test/handlers.ts",
    "test:watch": "vitest"
  },
  "type": "module",
  "types": "./out/server/src/server.d.ts",
  "version": "0.1.0"
}
