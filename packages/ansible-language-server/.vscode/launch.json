{
  "version": "0.2.0",
  "configurations": [
    // An attach configuration that attaches the debugger to a running server
    {
      "name": "Attach to Server",
      "type": "node",
      "request": "attach",
      "timeout": 30000,
      "port": 6009,
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceRoot}/out/server/**/*.ts"],
      "protocol": "inspector",
      "trace": true,
    },
