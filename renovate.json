{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "automergeStrategy": "squash",
  "commitMessageAction": "update",
  "commitMessageExtra": "",
  "commitMessageTopic": "dependencies",
  "configMigration": true,
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)",
    ":enablePreCommit"
  ],
  "github-actions": {
    "branchTopic": "build",
    "enabled": true,
    "groupName": "actions dependencies",
    "groupSlug": "actions",
    "labels": ["chore", "dependencies"],
    "packageRules": [
      {
        "matchPackageNames": [
          "*",
          "!/ansible/team-devtools/",
          "!/Actions-R-Us/actions-tagger/",
          "!/re-actors/alls-green/"
        ]
      }
    ]
  },
  "labels": ["chore", "dependencies"],
  "lockFileMaintenance": {
    "commitMessageAction": "update",
    "enabled": true,
    "groupName": "dependencies lockfile",
    "groupSlug": "lockfile",
    "rangeStrategy": "replace",
    "rebaseWhen": "behind-base-branch",
    "recreateWhen": "always"
  },
  "minimumReleaseAge": "1 days",
  "packageRules": [
    {
      "groupName": "all devDependencies",
      "groupSlug": "npm-dev",
      "matchDepTypes": ["devDependencies"],
      "matchManagers": ["npm"],
      "updateTypes": ["minor", "patch", "major"]
    },
    {
      "groupName": "npm runtime dependencies",
      "groupSlug": "npm",
      "matchDepTypes": ["dependencies"],
      "matchManagers": ["npm"],
      "updateTypes": ["minor", "patch", "major"]
    },
    {
      "matchPackageNames": ["*"],
      "minimumReleaseAge": "2 days"
    }
  ],
  "pin": {
    "branchTopic": "pin",
    "groupName": "all dependencies",
    "groupSlug": "pin"
  },
  "pinDigest": {
    "branchTopic": "pin-digest",
    "groupName": "all dependencies",
    "groupSlug": "pin-digest"
  },
  "prConcurrentLimit": 5,
  "pre-commit": {
    "branchTopic": "build"
  },
  "rangeStrategy": "replace",
  "recreateWhen": "always",
  "schedule": ["at any time", "before 4am on monday"],
  "separateMajorMinor": false,
  "separateMinorPatch": false,
  "timezone": "UTC"
}
