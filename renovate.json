{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>ansible/actions//config/renovate.json"],
  "github-actions": {
    "branchTopic": "actions",
    "enabled": true,
    "groupName": "actions dependencies",
    "groupSlug": "actions",
    "labels": ["chore", "dependencies"],
    "packageRules": [
      {
        "matchPackageNames": [
          "*",
          "!/ansible/team-devtools/",
          "!/Actions-R-Us/actions-tagger/",
          "!/re-actors/alls-green/"
        ]
      }
    ]
  },
  "lockFileMaintenance": {
    "commitMessageAction": "update",
    "enabled": true,
    "groupName": "dependencies lockfile",
    "groupSlug": "lockfile",
    "rangeStrategy": "replace",
    "rebaseWhen": "behind-base-branch",
    "recreateWhen": "always"
  },
  "minimumReleaseAge": "1 days",
  "prConcurrentLimit": 5
}
