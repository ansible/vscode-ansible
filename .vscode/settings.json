{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[shellscript]": {
    "editor.tabSize": 4
  },
  "[html]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.formatOnSave": false
  },
  "explorer.fileNesting.enabled": true,
  "editor.codeActionsOnSave": ["source.fixAll.eslint"],
  "editor.formatOnSave": true,

  "files.exclude": {
    ".task": true,
    ".yarn": true,
    ".vscode-test": true
  },
  "mochaExplorer.cwd": "packages/ansible-language-server",
  "search.exclude": {
    ".vscode-test": true
  },
  "redhat.telemetry.enabled": false,
  "eslint.useESLintClass": true,
  "github.copilot.enable": {
    "*": true
  },
  "chat.mcp.discovery.enabled": {
    "claude-desktop": true,
    "windsurf": true,
    "cursor-global": true,
    "cursor-workspace": true
  },
  "chat.mcp.servers": {
    "ansible-mcp-server": {
      "command": "/Users/anshukla/.nvm/versions/node/v22.15.1/bin/node",
      "args": ["out/server/src/cli.js", "--stdio"],
      "cwd": "${workspaceFolder}/packages/ansible-mcp-server",
      "env": {
        "WORKSPACE_ROOT": "${workspaceFolder}",
        "PATH": "/usr/local/bin:/usr/bin:/bin"
      }
    }
  },
  "ansible.mcp.enabled": true,
  "ansible.mcp.debug": true,
  "chat.mcp.assisted.nuget.enabled": true
}
